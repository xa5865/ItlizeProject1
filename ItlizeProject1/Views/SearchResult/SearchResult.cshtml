
@model ItlizeProject1.ViewModel.SearchResultVM

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <style>
        #mainbody {
            width: 100%;
            height: 100%;
        }

        #filter_left_container {
            width: 15%;
        }

        #search_result {
            width: 85%;
        }

        table {
            border: 1px solid black;
        }

        .collapsible {
            background-color: #777;
            color: white;
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 15px;
        }

            .active, .collapsible:hover {
                background-color: #555;
            }

            .collapsible:after {
                content: '\002B';
                color: white;
                font-weight: bold;
                float: right;
                margin-left: 5px;
            }

        .active:after {
            content: "\2212";
        }

        .content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
            background-color: #f1f1f1;
        }

        .filter_td {
            width: 250px;
        }

        input {
            display: inline-block;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div>

        <table id="mainbody" style="margin-top: 80px">

            <tr>
                <td id="filter_left_container">
                    <table id="filter_left">
                        <tr>
                            <td class="filter_td">
                                <label style="margin-left: 5px"> Search:</label>
                                <button id="button_save" style="margin-left: 45px">
                                    Save
                                </button>
                                <button id="button_clear" style="margin-left: 5px">
                                    Clear
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td class="filter_td">
                                <button class="collapsible">Product Type</button>
                                <div class="content">
                                    <label style="margin-left: 5px">Model Year:</label>
                                    <div class="div_two_inputs">
                                        <input type="number" class="min_max_input " id="model_year_min" style="width: 50px; height: 25px; margin-left: 10px">
                                        -
                                        <input type="number" class="min_max_input" id="model_year_max" style="width: 50px; height: 25px">
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="filter_td">
                                <button class="collapsible">Technical Specifications</button>
                                <div class="content">
                                    <p>
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort"></i> Air Flow (CFM)</span>
                                        <div class="div_two_inputs">
                                            Min <input type="number" class="min_max_input" id="airflow_min" />
                                            Max <input type="number" class="min_max_input" id="airflow_max" />
                                        </div>
                                    </p>
                                    <p>
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort"></i> Max Power (W)</span>
                                        <div class="div_two_inputs">
                                            Min <input type="number" class="min_max_input" id="maxpower_min" />
                                            Max <input type="number" class="min_max_input" id="maxpower_max" />
                                        </div>
                                    </p>
                                    <p>
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort"></i> Max Operating Voltage</span>
                                        <div class="div_two_inputs">
                                            Min <input type="number" class="min_max_input" id="maxoperatingvoltage_min" />
                                            Max <input type="number" class="min_max_input" id="maxoperatingvoltage_max" />
                                        </div>
                                    </p>
                                    <p>
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort"></i> Max Fun Speed (RPM)</span>
                                        <div class="div_two_inputs">
                                            Min <input type="number" class="min_max_input" id="maxfunspeed_min" />
                                            Max <input type="number" class="min_max_input" id="maxfunspeed_max" />
                                        </div>
                                    </p>
                                    <p>
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort"></i> Number of Fan Speeds</span>
                                        <div class="div_two_inputs">
                                            Min <input type="number" class="min_max_input" id="numberoffunsppeds_min" />
                                            Max <input type="number" class="min_max_input" id="numberoffunsppeds_max" />
                                        </div>
                                    </p>
                                    <p>
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort"></i> Sound at Max Speed (dBA)</span>
                                        <div class="div_two_inputs">
                                            Min <input type="number" class="min_max_input" id="soundatmaxspeed_min" />
                                            Max <input type="number" class="min_max_input" id="soundatmaxspeed_max" />
                                        </div>
                                    </p>
                                    <p>
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort"></i> Fun sweep diameter (in)</span>
                                        <div class="div_two_inputs">
                                            Min <input type="number" class="min_max_input" id="funsweepdiameter_min" />
                                            Max <input type="number" class="min_max_input" id="funsweepdiameter_max" />
                                        </div>
                                    </p>
                                    <p>
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort"></i> Height (in)</span>
                                        <div class="div_two_inputs">
                                            Min <input type="number" class="min_max_input" id="height_min" />
                                            Max <input type="number" class="min_max_input" id="height_max" />
                                        </div>
                                    </p>
                                    <p>
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort"></i> Weight (lbs)</span>
                                        <div class="div_two_inputs">
                                            Min <input type="number" class="min_max_input" id="weight_min" />
                                            Max <input type="number" class="min_max_input" id="weight_max" />
                                        </div>
                                    </p>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="filter_td">
                                <button class="collapsible">Brand</button>
                                <div class="content">
                                    123123
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
                <td id="search_result"></td>
            </tr>

        </table>
    </div>

    <script>
        var coll = document.getElementsByClassName("collapsible");
        var i;

        for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var content = this.nextElementSibling;
                if (content.style.maxHeight) {
                    content.style.maxHeight = null;
                } else {
                    content.style.maxHeight = content.scrollHeight + "px";
                }
            });
        }
    </script>
</body>
</html>
@{
    ViewBag.Title = "Home Page";
}
