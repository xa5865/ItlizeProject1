<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
    <div class="navbar navbar-fixed-top layout">
        <div class="col-lg-3">
            <img src="~/image/logo.png" width="150"/>
        </div>
        <div class="col-lg-6">
            @Html.Action("_SearchBar", "_SearchBar")
        </div>
        <div class="col-lg-3" align="right">
            @{
                var imgpath = "../../image/" + Session["pic"];
            }
            <img src=@imgpath onerror="this.src='../../image/user.png'" class="img-circle" width="100" height="100" />
            <a href="/Login/Logout" type="button" class="btn btn-secondary rounded-circle">LOG OUT</a>

        </div>
    </div>
    <hr />
    <div class="body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
